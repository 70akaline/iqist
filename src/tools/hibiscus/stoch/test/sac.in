!!------------------------------------------------------------------------
!!>>> sai.in: config parameters for stochastic analytic continuation code
!!------------------------------------------------------------------------
ntime = 1024       ! ntime : number of imaginary time slice
nwmax = 400        ! nwmax : number of frequency point on half axis
ngrid = 10001      ! ngrid : number of slice of x in [0,1]
ngamm = 1024       ! ngamm : number of r_{\gamma} and a_{\gamma}
nalph = 1          ! nalph : number of alpha parameter used in parallel tempering
nwarm = 2000       ! nwarm : maximum number of thermalization steps
nstep = 200000     ! nstep : maximum number of quantum Monte Carlo sampling steps
ndump = 2000       ! ndump : output period for stochastic analytic continuation code
ltype = 1          ! ltype : measurement scheme
lemax = 64         ! lemax : maximum number of legendre polynomial
legrd = 20001      ! legrd : number of mesh points for legendre polynomial
!!------------------------------------------------------------------------
ainit = 1.000      ! ainit : initial alpha parameter
ratio = 2.000      ! ratio : \alpha_(p+1) / \alpha_p = R
beta  = 8.000      ! beta  : inversion of real temperature
eta1  = 0.005      ! eta1  : lorentz broadening parameter \eta_1
sigma = 0.000      ! sigma : gauss broadening parameter
wstep = 0.020      ! wstep : frequency step, used to build the real frequency mesh
!!^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^
