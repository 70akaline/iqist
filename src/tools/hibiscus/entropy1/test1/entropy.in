ntime = 129    ! ntime : number of imaginary time slice
nwmax = 400    ! nwmax : number of frequency point on half axis
niter = 20     ! niter : number of cycles for maximum entropy method
ntune = 16     ! ntune : number of smooth runs for maximum entropy method
nstep = 3000   ! nstep : number of annealing steps per maximum entropy method cycle
nband = 1      ! nband : number of bands
norbs = 2      ! norbs : number of orbitals
ntype = 1      ! ntype : type of default model, if ntype = 0, gaussion type, if ntype = 1, flat type
ainit = 1200.  ! ainit : initial alpha parameter
devia = 0.001  ! devia : it is the deviation from the green's function
beta  = 10.00  ! beta  : inversion of real temperature
sigma = 1.600  ! sigma : gauss broadening parameter
wstep = 0.040  ! wstep : frequency step, used to build the frequency mesh
